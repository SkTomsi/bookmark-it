generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id
  email     String
  firstName String
  lastname  String
  imageUrl  String?
  userName  String   @unique
  createdAt DateTime @default(now())
  folders   Folder[]
}

model Folder {
  id          String     @id @default(uuid())
  name        String     @unique
  createdAt   DateTime   @default(now())
  User        User?      @relation(fields: [userId], references: [id])
  userId      String?
  description String
  bookmarks   Bookmark[]
  emoji       String
}

model Bookmark {
  id         String   @id @default(uuid())
  url        String
  createdAt  DateTime @default(now())
  Folder     Folder?  @relation(fields: [folderId], references: [id])
  folderId   String?
  iconUrl    String?
  ogImageUrl String?
}
